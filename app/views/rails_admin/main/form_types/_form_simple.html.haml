- translations = field.bindings[:object].safe_send(field.translations_field)
= form.fields_for field.translations_field do |localized_field|
  - I18n.available_locales.each do |locale|
    = localized_field.label locale
    = localized_field.send field_type, locale, html_attributes.reverse_merge({ :value => translations.try(:[], locale.to_s) })